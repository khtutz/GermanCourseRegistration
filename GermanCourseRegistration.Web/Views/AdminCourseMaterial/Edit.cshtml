@model GermanCourseRegistration.Web.Models.ViewModels.CourseMaterialView

<div class="container">
    <form method="post">
        <input type="hidden" asp-for="Id" />
        <!-- Name and Category -->
        <div class="row mb-3">
            <div class="col-sm-6">
                <label for="name" class="form-label">Name</label>
                <input type="text"
                       id="name"
                       class="form-control"
                       asp-for="Name"
                       required />
            </div>
            <div class="col-sm-6">
                <label for="category" class="form-label">Category</label>
                <select class="form-select"
                        id="category"
                        name="category"
                        asp-items="@Model.AvailableCategories"
                        asp-for="Category"
                        required>
                </select>
            </div>
        </div>

        <!-- Description and Price -->
        <div class="row mb-3">
            <div class="col-sm-6">
                <label for="description" class="form-label">Description</label>
                <textarea class="form-control"
                          rows="4"
                          id="description"
                          name="description"
                          asp-for="Description"></textarea>
            </div>
            <div class="col-sm-6">
                <label for="price" class="form-label">Price ($)</label>
                <input type="number"
                       step="any"
                       class="form-control"
                       id="price"
                       asp-for="Price"
                       required />
            </div>
        </div>

        
        <div class="float-end">
            <!-- Delete Button -->
            <a class="btn btn-light me-2"
               data-bs-toggle="modal"
               data-bs-target="#deleteModal">
                <i class="bi bi-trash text-danger"></i> Delete
            </a>

            <!-- Save Button -->
            <button type="submit" class="btn btn-info mx-1">
                <i class="bi bi-box-arrow-down"></i> Save
            </button>
        </div>

        <!-- Modal for Delete Action -->
        <div class="modal fade" id="deleteModal">
            <div class="modal-dialog">
                <div class="modal-content">

                    <!-- Modal Header -->
                    <div class="modal-header">
                        <h4 class="modal-title">Deleting the Course Material</h4>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>

                    <!-- Modal body -->
                    <div class="modal-body">
                        Are you sure you want to delete the course material?
                    </div>

                    <!-- Modal footer -->
                    <div class="modal-footer">
                        <button type="submit"
                                class="btn btn-light ms-2"
                                asp-area=""
                                asp-controller="AdminCourseMaterial"
                                asp-action="Delete"
                                asp-route-id="@Model.Id">
                            <i class="bi bi-trash text-danger"></i> Delete
                        </button>
                        <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
                    </div>

                </div>
            </div>
        </div>
    </form>
</div>